<div class="w-full px-4 md:px-8">
  <% if notice.present? %>
    <% if flash[:success] %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% else %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  <% end %>

  <% content_for :title, "My Lists" %>

  <div class="flex flex-col md:flex-row justify-between items-center">
    <h1 class="font-bold text-2xl md:text-4xl">My lists</h1>
    <%= link_to "New list", new_list_path, class: "mt-4 md:mt-0 rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="lists" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6 mb-8">
    <% @lists.each do |list| %>
      <div class="bg-gray-100 shadow-md rounded-lg p-4 md:p-6">
        <%= render list %>
        <div class="flex flex-col md:flex-row items-center justify-end mt-4">
          <p class="w-full md:w-auto">
            <%= link_to "Show this list", list, class: "w-full md:w-auto ml-0 md:ml-2 mt-2 md:mt-0 rounded-lg py-2 px-4 bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 inline-block font-medium text-center" %>
          </p>
          <p class="w-full md:w-auto">
            <%= link_to "Tasks", list_tasks_path(list), class: "w-full md:w-auto ml-0 md:ml-2 mt-2 md:mt-0 rounded-lg py-2 px-4 bg-gradient-to-r from-purple-400 via-purple-500 to-purple-600 inline-block font-medium text-center" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
