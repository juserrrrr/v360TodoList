<div class="mx-auto md:w-2/3 w-full px-4 md:px-0 flex">
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @list %>

    <div class="flex flex-col sm:flex-row gap-4 justify-center sm:justify-start mt-4">
      <%= link_to "Edit this list", edit_list_path(@list), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-center" %>
      <%= link_to "Back to lists", lists_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-center" %>
      <%= button_to "Destroy this list", @list, method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-center w-full" %>
    </div>
  </div>
</div>
